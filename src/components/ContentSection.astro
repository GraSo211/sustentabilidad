---
interface Props {
    title: string;
    content?: string;
}

const { title, content } = Astro.props;
---

<div class="contenedor">
    <h2>{title}</h2>
    <div class="content">
        {content && <p>{content}</p>}
        <slot name="right">
    </div>
    <slot name="down"></slot>
</div>
<style>
    .contenedor{
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    .content{
        display: flex;
        justify-content: space-around;
    }
    p{
        min-width: 50%;
        max-width: 100%;
    }

</style>
